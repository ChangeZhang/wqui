extends base

block title
  title 提示消息

block head
    style(type="text/css").
      code {
        display: inline-block;
        *display: inline;
        *zoom: 1;
        padding: 2px 4px;
        border: 1px solid #e1e1e8;
        font-size: 12px;
      }

block sidebar
  +sidebar('msg')
block content

  h1 提示消息

  h2.sui-page-header 设计规范

  div.docs-description
      img(src='pictures/docs/msgs.png')

  ul.demo-operations.clearfix
